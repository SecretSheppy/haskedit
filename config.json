{
    "prompt-format": "&path; $",
    "file-name-display-format": "&fpath;",
    "indentation-level": "2",
    "ruler-size": "120",
    "scripts": {
        "build": "ghc -O2 &fpath;",
        "run": "ghc --make &fpath; && &fpathexe;",
        "interactive": "stack ghci &fpath;"
    },
    "on-start": {
        "show-prompt": false
    },
    "on-save": {
        "formatter": {
            "run": true,
            "script": "ormolu &fpath;"
        }
    },
    "performance": {
        "disable-line-character-position": false
    }
}